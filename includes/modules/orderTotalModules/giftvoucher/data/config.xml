<ConfigurationGroup>
	<title>Gift Voucher</title>
	<key>orderTotalGiftVoucher</key>
	<description>Configuration Settings For The Gift Voucher Order Total</description>
	<tabs>
		<general>
			<title>General</title>
			<description>General Order Total Settings</description>
			<configurations>
				<INSTALLED editable="false">
					<title><![CDATA[Installed Status]]></title>
					<value><![CDATA[False]]></value>
					<description><![CDATA[Tells if the module is installed or not]]></description>
				</INSTALLED>
				<STATUS>
					<title><![CDATA[Display Total]]></title>
					<value><![CDATA[False]]></value>
					<description><![CDATA[Do you want to display the total order value?]]></description>
					<set_function><![CDATA[tep_cfg_select_option(array('True', 'False'),]]></set_function>
				</STATUS>
				<DISPLAY_ORDER>
					<title><![CDATA[Display Order]]></title>
					<value><![CDATA[0]]></value>
					<description><![CDATA[Display Order. Lowest is displayed first.]]></description>
				</DISPLAY_ORDER>
				<TAX_CLASS>
					<title><![CDATA[Tax Class]]></title>
					<value><![CDATA[0]]></value>
					<description><![CDATA[Use the following tax class when treating Gift Voucher as Credit Note.]]></description>
					<set_function><![CDATA[tep_cfg_pull_down_tax_classes(]]></set_function>
					<use_function><![CDATA[tep_get_tax_class_title]]></use_function>
				</TAX_CLASS>
				<MODULE_ORDER_TOTAL_GV_QUEUE>
					<title><![CDATA[Queue Purchases]]></title>
					<value><![CDATA[True]]></value>
					<description><![CDATA[Do you want to queue purchases of the Gift Voucher?]]></description>
					<set_function><![CDATA[tep_cfg_select_option(array('True', 'False'),]]></set_function>
				</MODULE_ORDER_TOTAL_GV_QUEUE>
				<MODULE_ORDER_TOTAL_GV_INC_SHIPPING>
					<title><![CDATA[Include Shipping]]></title>
					<value><![CDATA[True]]></value>
					<description><![CDATA[Include Shipping in calculation]]></description>
					<set_function><![CDATA[tep_cfg_select_option(array('True', 'False'),]]></set_function>
				</MODULE_ORDER_TOTAL_GV_INC_SHIPPING>
				<MODULE_ORDER_TOTAL_GV_INC_TAX>
					<title><![CDATA[Include Tax]]></title>
					<value><![CDATA[True]]></value>
					<description><![CDATA[Include Tax in calculation]]></description>
					<set_function><![CDATA[tep_cfg_select_option(array('True', 'False'),]]></set_function>
				</MODULE_ORDER_TOTAL_GV_INC_TAX>
				<MODULE_ORDER_TOTAL_GV_CALC_TAX>
					<title><![CDATA[Re-calculate Tax]]></title>
					<value><![CDATA[None]]></value>
					<description><![CDATA[Re-Calculate Tax]]></description>
					<set_function><![CDATA[tep_cfg_select_option(array('None', 'Standard', 'Credit Note'),]]></set_function>
				</MODULE_ORDER_TOTAL_GV_CALC_TAX>
				<MODULE_ORDER_TOTAL_GV_CREDIT_TAX>
					<title><![CDATA[Credit including Tax]]></title>
					<value><![CDATA[False]]></value>
					<description><![CDATA[Add tax to purchased Gift Voucher when crediting to Account]]></description>
					<set_function><![CDATA[tep_cfg_select_option(array('True', 'False'),]]></set_function>
				</MODULE_ORDER_TOTAL_GV_CREDIT_TAX>
			</configurations>
		</general>
	</tabs>
</ConfigurationGroup>
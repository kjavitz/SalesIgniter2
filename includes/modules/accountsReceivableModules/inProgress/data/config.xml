<ConfigurationGroup>
	<title>Sale In Progress</title>
	<key>accountsReceivableModuleInProgress</key>
	<description>Configuration Settings For The In Progress Module</description>
	<tabs>
		<general>
			<title>General</title>
			<description>General Module Settings</description>
			<configurations>
				<INSTALLED editable="false">
					<title><![CDATA[Installed Status]]></title>
					<value><![CDATA[False]]></value>
					<description><![CDATA[Tells if the module is installed or not]]></description>
				</INSTALLED>
				<STATUS>
					<title><![CDATA[Enable In Progress Module]]></title>
					<value><![CDATA[False]]></value>
					<description><![CDATA[Do you want to use this module?]]></description>
					<set_function>
						<type>radio</type>
						<values>
							<value>True</value>
							<value>False</value>
						</values>
					</set_function>
				</STATUS>
				<ASSIGN_INVENTORY>
					<title><![CDATA[Assign Inventory]]></title>
					<value><![CDATA[False]]></value>
					<description><![CDATA[Assign inventory when this module is used for sales?]]></description>
					<set_function>
						<type>radio</type>
						<values>
							<value>True</value>
							<value>False</value>
						</values>
					</set_function>
				</ASSIGN_INVENTORY>
			</configurations>
		</general>
		<salesingiter>
			<title>Sales Igniter</title>
			<description>Sales Igniter System Settings</description>
			<configurations>
				<CAN_SHOW_DETAILS editable="false">
					<title><![CDATA[Can Show Details]]></title>
					<value><![CDATA[False]]></value>
					<description><![CDATA[Can sales from this module use the details page?]]></description>
					<set_function>
						<type>radio</type>
						<values>
							<value>True</value>
							<value>False</value>
						</values>
					</set_function>
				</CAN_SHOW_DETAILS>
				<CAN_CANCEL editable="false">
					<title><![CDATA[Can Be Cancelled]]></title>
					<value><![CDATA[False]]></value>
					<description><![CDATA[Can sales from this module be cancelled?]]></description>
					<set_function>
						<type>radio</type>
						<values>
							<value>True</value>
							<value>False</value>
						</values>
					</set_function>
				</CAN_CANCEL>
				<CAN_PRINT editable="false">
					<title><![CDATA[Can Be Printed]]></title>
					<value><![CDATA[False]]></value>
					<description><![CDATA[Can sales from this module be printed?]]></description>
					<set_function>
						<type>radio</type>
						<values>
							<value>True</value>
							<value>False</value>
						</values>
					</set_function>
				</CAN_PRINT>
				<CAN_EXPORT editable="false">
					<title><![CDATA[Can Be exported]]></title>
					<value><![CDATA[False]]></value>
					<description><![CDATA[Can sales from this module be exported?]]></description>
					<set_function>
						<type>radio</type>
						<values>
							<value>True</value>
							<value>False</value>
						</values>
					</set_function>
				</CAN_EXPORT>
			</configurations>
		</salesingiter>
	</tabs>
</ConfigurationGroup>
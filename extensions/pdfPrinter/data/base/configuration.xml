<ConfigurationGroup>
	<title>PDF Printer</title>
	<key>pdfPrinter</key>
	<description>Configuration Settings For The PDF Printer Extension</description>
	<Configuration>
		<EXTENSION_PDF_PRINTER_ENABLED>
			<title>Enable PDF Printer</title>
			<value>True</value>
			<description>Enable Or Disable The PDF Printer Extension</description>
			<sort_order>1</sort_order>
			<set_function>tep_cfg_select_option(array('True','False'),</set_function>
		</EXTENSION_PDF_PRINTER_ENABLED>
		<EXTENSION_PDF_PRINTER_INVOICE_LAYOUT>
			<title>Select Invoice Layout</title>
			<value>1</value>
			<description>Select Invoice Layout</description>
			<sort_order>1</sort_order>
			<use_function><![CDATA[tep_cfg_get_layout_name]]></use_function>
			<set_function><![CDATA[tep_cfg_pull_down_layout_list(]]></set_function>
		</EXTENSION_PDF_PRINTER_INVOICE_LAYOUT>
		<EXTENSION_PDF_PRINTER_AGREEMENT_LAYOUT>
			<title>Select Agreement Layout</title>
			<value>2</value>
			<description>Select Agreement Layout</description>
			<sort_order>1</sort_order>
			<use_function><![CDATA[tep_cfg_get_layout_name]]></use_function>
			<set_function><![CDATA[tep_cfg_pull_down_layout_list(]]></set_function>
		</EXTENSION_PDF_PRINTER_AGREEMENT_LAYOUT>
		<EXTENSION_PDF_PRINTER_PACKING_SLIP_LAYOUT>
			<title>Select Packing Slip Layout</title>
			<value>2</value>
			<description>Select Packing Slip Layout</description>
			<sort_order>1</sort_order>
			<use_function><![CDATA[tep_cfg_get_layout_name]]></use_function>
			<set_function><![CDATA[tep_cfg_pull_down_layout_list(]]></set_function>
		</EXTENSION_PDF_PRINTER_PACKING_SLIP_LAYOUT>

	</Configuration>
</ConfigurationGroup>
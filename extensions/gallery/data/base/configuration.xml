<ConfigurationGroup>
	<title>Gallery</title>
	<key>gallery</key>
	<description>Configuration Settings For The Gallery Extension</description>
	<Configuration>
		<EXTENSION_GALLERY_ENABLED>
			<title>Enable Gallery</title>
			<value>True</value>
			<description>Enable Or Disable The Gallery Extension</description>
			<sort_order>1</sort_order>
			<set_function>tep_cfg_select_option(array('True','False'),</set_function>
		</EXTENSION_GALLERY_ENABLED>
		<EXTENSION_GALLERY_THUMBS_WIDTH>
			<title>Thumbs Width on Gallery Page</title>
			<value>250</value>
			<description>Thumb Width on gallery page</description>
			<sort_order>1</sort_order>

		</EXTENSION_GALLERY_THUMBS_WIDTH>
		<EXTENSION_GALLERY_THUMBS_HEIGHT>
			<title>Thumbs Height on Gallery Page</title>
			<value>250</value>
			<description>Thumb Height on gallery page</description>
			<sort_order>1</sort_order>

		</EXTENSION_GALLERY_THUMBS_HEIGHT>
	</Configuration>
</ConfigurationGroup>
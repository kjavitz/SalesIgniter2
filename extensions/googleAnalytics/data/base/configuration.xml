<ConfigurationGroup>
	<title>Google Analytics</title>
	<key>googleAnalytics</key>
	<description>Configuration Settings For The Gooogle Analytics Extension</description>
	<Configuration>
		<EXTENSION_GOOGLE_ANALYTICS_ENABLED>
			<title>Enable Gooogle Analytics</title>
			<value>True</value>
			<description>Enable Or Disable The Google Analytics Extension</description>
			<sort_order>1</sort_order>
			<set_function>tep_cfg_select_option(array('True','False'),</set_function>
		</EXTENSION_GOOGLE_ANALYTICS_ENABLED>
		<EXTENSION_GOOGLE_ANALYTICS_TRACKING_GENERAL>
			<title>Gooogle Analytics Tracking Code</title>			
			<description>Google Analytics tracking code.</description>
			<sort_order>2</sort_order>
			<set_function>isArea</set_function>
		</EXTENSION_GOOGLE_ANALYTICS_TRACKING_GENERAL>
        <EXTENSION_GOOGLE_ANALYTICS_META_VERIFICATION>
			<title>Gooogle Webmaster Tools Code</title>
			<description>google-site-verification code</description>
			<sort_order>2</sort_order>
		</EXTENSION_GOOGLE_ANALYTICS_META_VERIFICATION>
	</Configuration>
</ConfigurationGroup>